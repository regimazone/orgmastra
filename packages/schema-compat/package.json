{
  "name": "@mastra/schema-compat",
  "version": "0.11.2-alpha.3",
  "description": "Tool schema compatibility layer for Mastra.ai",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./zod-to-json": {
      "import": {
        "types": "./dist/zod-to-json.d.ts",
        "default": "./dist/zod-to-json.js"
      },
      "require": {
        "types": "./dist/zod-to-json.d.ts",
        "default": "./dist/zod-to-json.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup --silent --config tsup.config.ts",
    "build:watch": "tsup --watch --silent --config tsup.config.ts",
    "test": "vitest run",
    "lint": "eslint ."
  },
  "keywords": [
    "mastra",
    "schema",
    "tool",
    "compatibility",
    "zod"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "json-schema": "^0.4.0",
    "zod-from-json-schema": "^0.5.0",
    "zod-from-json-schema-v3": "npm:zod-from-json-schema@^0.0.5",
    "zod-to-json-schema": "^3.24.6"
  },
  "peerDependencies": {
    "ai": "^4.0.0 || ^5.0.0",
    "zod": "^3.25.0 || ^4.0.0"
  },
  "devDependencies": {
    "@internal/lint": "workspace:*",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^20.19.0",
    "ai": "4.3.16",
    "eslint": "^9.30.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "zod": "^3.25.76"
  },
  "homepage": "https://mastra.ai",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mastra-ai/mastra.git",
    "directory": "packages/schema-compat"
  },
  "bugs": {
    "url": "https://github.com/mastra-ai/mastra/issues"
  }
}
